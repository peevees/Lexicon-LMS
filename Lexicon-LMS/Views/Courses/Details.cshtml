@model Lexicon_LMS.Models.Course
@using Lexicon_LMS.Models;
@{
    ViewBag.CourseCode = Model.CourseCode;

}
<link href="~/Content/icecreamstyle.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
